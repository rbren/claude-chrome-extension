{
  "manifest_version": 3,
  "name": "Claude JavaScript Executor",
  "version": "1.0",
  "description": "Execute JavaScript code generated by Claude AI on any webpage",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}