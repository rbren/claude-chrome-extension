{
  "manifest_version": 2,
  "name": "Claude JavaScript Executor",
  "version": "1.0",
  "description": "Execute JavaScript code generated by Claude AI on any webpage",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}