{
  "manifest_version": 2,
  "name": "Claude JavaScript Executor",
  "version": "1.0",
  "description": "Execute JavaScript code generated by Claude AI on any webpage",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}